
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id Int @id @default(autoincrement())
  username String
  email String
  favoritos Cancion[]
}

model Autor {
  id Int @id @default(autoincrement())
  nombre String @unique
  slug String @unique
  canciones Cancion[]
}

model Cancion {
  id Int @id @default(autoincrement())
  titulo String
  slug String 
  letra String
  referencia String
  autor Autor @relation(fields: [autorId], references: [id])
  autorId Int
  favoritos Usuario[]

  @@unique([autorId, slug])
}

model Lectura {
  id Int @id @default(autoincrement())
  titulo String
  texto String
}